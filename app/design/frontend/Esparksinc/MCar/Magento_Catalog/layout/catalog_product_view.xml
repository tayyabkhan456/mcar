<?xml version="1.0"?>
<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd"
    layout="1column">
    <body>
      <!-- Keep product main block and add a theme-specific extra container after it -->
        <referenceContainer name="content">
        <referenceBlock name="product.info.main" />
        <!-- <move element="product.info.description" destination="product.info.main" after="product.info.price"/> -->
        </referenceContainer>
        <referenceContainer name="product.info.main">
                <block class="Magento\Catalog\Block\Product\View"
                    name="product.attribute.custom"
                    template="Magento_Catalog::product/productattribute.phtml"
                    after="product.info.price"/>
        </referenceContainer>
    

      <!-- Optional: move existing social share block into the new container (no-op if not present) -->
    </body>
</page>